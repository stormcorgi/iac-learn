version: '3'
services:
  {% if 'web' in group_names %}

  web:
    image: tootsuite/mastodon:{{mastodon_git.json.tag_name}}
    restart: always
    env_file: .env.production
    command: bash -c "rm -f /mastodon/tmp/pids/server.pid; bundle exec rails s -p 3000"
    healthcheck:
      test: ['CMD-SHELL', 'wget -q --spider --proxy=off localhost:3000/health || exit 1']
    ports:
      - '0.0.0.0:3000:3000'
    {% if 'spica' in inventory_hostname %}

    volumes:
      - ./public/system:/mastodon/public/system
      - /var/run/postgresql:/var/run/postgresql
      - /var/run/redis:/var/run/redis
    {% else %}

    volumes:
      - ./public/system:/mastodon/public/system
    {% endif %}

    deploy:
      resources:
        limits:
          memory: 512m
    logging:
      driver: awslogs
      options:
        awslogs-region: ap-northeast-1
        awslogs-group: "mastoodon-web"
        awslogs-create-group: "true"
        tag: '{{inventory_hostname}}-web-{{ mastodon_git.json.tag_name | regex_replace("\.","_") }}'

  {% endif %}
  {% if 'streaming' in group_names %}

  streaming:
    image: tootsuite/mastodon:{{mastodon_git.json.tag_name}}
    restart: always
    env_file: .env.production
    command: node ./streaming
    {% if 'pi' in inventory_hostname %}

    healthcheck:
      test: ['CMD-SHELL', 'wget -q --spider --proxy=off localhost:4040/api/v1/streaming/health || exit 1']
    ports:
      - '0.0.0.0:4040:4000'
    {% else %}

    healthcheck:
      test: ['CMD-SHELL', 'wget -q --spider --proxy=off localhost:4000/api/v1/streaming/health || exit 1']
    ports:
      - '0.0.0.0:4000:4000'
    {% endif %}

    deploy:
      resources:
        limits:
          memory: 256m
    logging:
      driver: awslogs
      options:
        awslogs-region: ap-northeast-1
        awslogs-group: "mastoodon-streaming"
        awslogs-create-group: "true"
        tag: '{{inventory_hostname}}-streaming-{{ mastodon_git.json.tag_name | regex_replace("\.","_") }}'
  {% endif %}
  {% if 'sidekiq' in group_names %}
    {% if 'vega' in inventory_hostname %}

  sidekiq_all:
    image: tootsuite/mastodon:{{mastodon_git.json.tag_name}}
    restart: always
    env_file: .env.production
    command: bundle exec sidekiq -c 10 -q scheduler -q mailers -q default -q push -q ingress -q pull
    mem_limit: 768M
    logging:
      driver: awslogs
      options:
        awslogs-region: ap-northeast-1
        awslogs-group: "mastoodon-sidekiq"
        awslogs-create-group: "true"
        tag: '{{inventory_hostname}}-sidekiq-all-{{ mastodon_git.json.tag_name | regex_replace("\.","_") }}'
    {% else %}

  sidekiq:
    image: tootsuite/mastodon:{{mastodon_git.json.tag_name}}
    restart: always
    env_file: .env.production
    command: bundle exec sidekiq -c 15 -q default -q push -q ingress -q pull -q mailers
    mem_limit: 512M
    logging:
      driver: awslogs
      options:
        awslogs-region: ap-northeast-1
        awslogs-group: "mastoodon-sidekiq"
        awslogs-create-group: "true"
        tag: '{{inventory_hostname}}-sidekiq-{{ mastodon_git.json.tag_name | regex_replace("\.","_") }}'
    {% endif %}
  {% endif %}
